{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "jsx": "react-native",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "paths": { "@/*": ["./*"] },
    "moduleResolution": "Bundler",
    "moduleSuffixes": [".native", ".ios", ".android", ".web", ""]
  },
  "include": ["**/*.ts", "**/*.tsx"]
}